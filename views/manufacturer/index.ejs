<%- include('../partials/header'); -%>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Manufacturer Webpage</h1>
            <p>
                <a class="btn btn-primary btn-lg" href="/manufacturer/new">Add new Manufacturer</a>
            </p>
        </div>
    </header>

    <div class="row">
        <% manufacturers.forEach(function(manufacturer){ %>
            <div class="col-md-3 sm-6 ">
                <div class = "card img-thumbnail " style="width: 18rem;">
                    <div>
                        <img class = "card-img-top" src = "<%= manufacturer.image %>" >
                    </div>
                    <div class="card-body text-center">
                        <h4 class="card-title"> <%= manufacturer.name%></h4>
                        <a href= "/manufacturer/<%= manufacturer.id %>" class = "btn btn-primary">More Info</a>
                    </div>
                 </div>
            </div>
        <%}); %>
    </div>
</div>

<%- include('../partials/footer'); -%>