<%- include('../partials/header'); -%>
<div class="container">
    <div >
        <h1 style="text-align:center;">Edit <%= manufacturer.name %></h1>
        <div style="width:30%; margin:30px auto;">
            <form action="/manufacturer/<%= manufacturer.id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input class="form-control" type = "text" name ="manufacturer[name]"  value = "<%= manufacturer.name %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type = "number" name ="manufacturer[price]"  value="<%=manufacturer.price %>" min="0.01" step="0.01">
                </div>
                <div class="form-group">
                    <input class="form-control" type = "text" name ="manufacturer[image]" value = "<%= manufacturer.image %>">
                </div>
                <div class="form-group">
                    <input class="form-control" type = "text" name ="manufacturer[description]" value = "<%= manufacturer.description %>">
                </div>
                 <div class="form-group">
                     <button class="btn btn-lg btn-primary btn-block">Submit</button>
                 </div>
            </form>
            <a href="/manufacturer">Go back</a>
        </div>
    </div>
</div>
<%- include('../partials/footer'); -%>


